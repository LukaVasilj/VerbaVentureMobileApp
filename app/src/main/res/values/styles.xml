<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Disable the default ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- layout/activity_first_screen.xml -->
    <style name="verbaventure">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#131313</item>
    </style>

    <style name="explore_the">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#131313</item>
    </style>

    <style name="start_learning">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="already_have">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#99080E1E</item>
    </style>
    <style name="log_in">
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#131313</item>
    </style>

    <!-- layout/activity_choose_language/city.xml -->
    <style name="choose">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#131313</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
    </style>

    <style name="language_city">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">#131313</item>
    </style>

    <!-- END -->

</resources>