<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/placeNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/categoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/placeNameTextView"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/challengeTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/categoryTextView"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/nativeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/challengeTitleTextView"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/translatedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nativeTextView"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/distanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/translatedTextView"
        android:layout_marginBottom="16dp"
        android:text="@string/distance" />

    <Button
        android:id="@+id/ttsButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/translatedTextView"
        android:layout_marginTop="8dp"
        android:layout_alignParentLeft="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:drawableTop="@android:drawable/ic_media_play"
        android:backgroundTint="?attr/colorPrimary"
        android:padding="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/tts_play" />

    <Button
        android:id="@+id/startChallengeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ttsButton"
        android:layout_marginTop="16dp"
        android:text="@string/start_challenge" />

</RelativeLayout>