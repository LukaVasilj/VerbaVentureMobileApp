<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/challengeTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/challengeDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/challengeTitleTextView"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/nativeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/challengeDescriptionTextView"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/translatedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nativeTextView"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/startChallengeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/translatedTextView"
        android:text="Pokreni izazov" />
</RelativeLayout>